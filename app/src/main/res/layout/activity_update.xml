<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:gravity="center|left"
        android:text="Loại món ăn"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtCategoryEdit"
        app:layout_constraintStart_toStartOf="@+id/txtCategoryEdit" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:gravity="center|left"
        android:text="Tên món ăn"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNameEdit"
        app:layout_constraintStart_toStartOf="@+id/txtNameEdit" />

    <EditText
        android:id="@+id/txtNameEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/editbackground"
        android:hint="Tên món ăn"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCategoryEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="Loại món ăn"
        android:padding="10dp"
        android:background="@drawable/editbackground"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameEdit" />

    <EditText
        android:id="@+id/txtPriceEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="Giá"
        android:padding="10dp"
        android:background="@drawable/editbackground"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoryEdit" />

    <Button
        android:id="@+id/btnEditT"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="31dp"
        android:text="Sửa"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPriceEdit" />

    <Button
        android:id="@+id/btnCancel3"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="31dp"
        android:text="Hủy"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPriceEdit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:gravity="center|left"
        android:text="Giá "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPriceEdit"
        app:layout_constraintStart_toStartOf="@+id/txtPriceEdit" />

    <ImageView
        android:id="@+id/iconCreate"
        android:layout_width="208dp"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/txtNameEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lau123" />
</androidx.constraintlayout.widget.ConstraintLayout>