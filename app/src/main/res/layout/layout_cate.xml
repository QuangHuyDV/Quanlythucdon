<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/lblCateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtEmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/lblCateId"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgDeleCate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="360dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/a1"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/imgEditCate"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgEditCate"
                android:layout_width="32dp"
                android:layout_height="31dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/a3"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/txtEmName"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>